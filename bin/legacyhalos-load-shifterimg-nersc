#!/bin/bash
# Load the legacyhalos Docker container using shifter then source
#   legacyhalos-shifter-env-nersc
#
echo 'Updating and loading the shifter image'

shifterimg pull docker:legacysurvey/legacyhalos:v0.0.1
shifter --image docker:legacysurvey/legacyhalos:v0.0.1 bash

#shifterimg pull docker:legacysurvey/legacyhalos:latest
#shifter --image docker:legacysurvey/legacyhalos:latest bash
